<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context="com.kai.newsletter.MainActivity">

    <ImageView
        android:id="@+id/halo"
        android:layout_width="282dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="67dp"
        app:srcCompat="@drawable/halo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Welcome to the app!"
        android:textColor="#FFC107"
        android:textSize="24sp" />

    <Button
        android:id="@+id/profil"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="250dp"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:onClick="profil"
        android:text="profil" />

    <Button
        android:id="@+id/galeri"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="250dp"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:onClick="galeri"
        android:text="galeri" />

    <Button
        android:id="@+id/kopi"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="300dp"
        android:text="pesan kopi yuk!"
        android:onClick="kopi" />

    <Button
        android:id="@+id/baca"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#F1B605"
        android:backgroundTint="#ffff"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="350dp"
        android:text="berita teknologi terbaru"
        android:onClick="berita" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#F1B605"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/textView"
        android:text="feedback about this app"
        android:onClick="feed"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="20dp"
        android:text="Â© Muhammad Siddiq L | 2019 for TUBES"
        android:textColor="#FDFDFD"
        android:textSize="10sp"
        android:textStyle="italic" />

</RelativeLayout>